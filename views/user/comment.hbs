<h2>All the comments</h2>
{{#each comment}}
<div>
    <p>User from: {{this.userFrom.name}} {{this.userFrom.lastname}}</p>
    <p>User to: {{this.userTo.name}} {{this.userTo.lastname}}</p>
    <p>Comment: {{this.comment}}</p>
    <form action="/user/profile/comment/delete" method="POST">
        <input type="hidden" name="commentId" value="{{_id}}">
       <a href="#"><input type="hidden" name="userTo" value="{{userTo}}"></a> 
        <input type="submit" value="Delete comment">
    </form>
</div>
{{/each}}

<br></br>

<form action="/user/profile/comment" method="POST">
    <label for="">Please, write your comment here!:</label>
    <input type="text" name="comment">{{comment.comment}}</input>
    <input type="hidden" name="userTo" value="{{userTo}}">
    <input type="hidden" name="userFrom" value="{{userFrom}}">
    <input type="submit" value="Send comment">
</form>